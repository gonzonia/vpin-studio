<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="700.0" prefWidth="1200.0" stylesheets="@stylesheet.css" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.mephisto.vpin.commons.fx.pausemenu.MenuScoreViewController">
   <children>
      <BorderPane prefHeight="200.0" prefWidth="200.0">
         <left>
            <ImageView fx:id="sectionIcon" fitHeight="200.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" BorderPane.alignment="CENTER">
               <image>
                  <Image url="@rules.png" />
               </image>
               <BorderPane.margin>
                  <Insets left="24.0" />
               </BorderPane.margin></ImageView>
         </left>
         <center>
            <VBox prefHeight="200.0" prefWidth="100.0" spacing="3.0" BorderPane.alignment="CENTER">
               <BorderPane.margin>
                  <Insets bottom="24.0" left="24.0" right="24.0" top="24.0" />
               </BorderPane.margin>
               <children>
                  <Label fx:id="nameLabel" text="Label" textFill="WHITE" wrapText="true">
                     <font>
                        <Font size="36.0" />
                     </font>
                  </Label>
                  <Label fx:id="versionLabel" layoutX="10.0" layoutY="104.0" text="Label" textFill="WHITE" wrapText="true">
                     <font>
                        <Font size="24.0" />
                     </font>
                  </Label>
                  <Label fx:id="authorsLabel" layoutX="10.0" layoutY="10.0" text="Label" textFill="WHITE" wrapText="true">
                     <font>
                        <Font size="24.0" />
                     </font>
                  </Label>
                  <Label fx:id="scoreInfoLabel" layoutX="10.0" layoutY="105.0" text="Label" textFill="WHITE" wrapText="true">
                     <font>
                        <Font size="16.0" />
                     </font>
                  </Label>
               </children>
            </VBox>
         </center>
         <bottom>
            <BorderPane styleClass="subpanel" BorderPane.alignment="CENTER">
               <BorderPane.margin>
                  <Insets bottom="24.0" left="24.0" right="24.0" top="24.0" />
               </BorderPane.margin>
               <center>
                  <HBox prefHeight="400.0" prefWidth="200.0" spacing="24.0" BorderPane.alignment="CENTER">
                     <children>
                        <VBox fx:id="mainColumn">
                           <children>
                              <Label text="Latest Scores" textFill="WHITE">
                                 <font>
                                    <Font size="24.0" />
                                 </font>
                                 <VBox.margin>
                                    <Insets bottom="24.0" />
                                 </VBox.margin>
                              </Label>
                           </children>
                        </VBox>
                     </children>
                     <BorderPane.margin>
                        <Insets />
                     </BorderPane.margin>
                     <padding>
                        <Insets bottom="24.0" left="24.0" right="24.0" />
                     </padding>
                  </HBox>
               </center>
               <left>
                  <ImageView fx:id="wheelImage" fitHeight="200.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" BorderPane.alignment="TOP_LEFT">
                     <image>
                        <Image url="@rules.png" />
                     </image>
                  </ImageView>
               </left>
               <padding>
                  <Insets bottom="24.0" left="24.0" right="24.0" top="24.0" />
               </padding>
            </BorderPane>
         </bottom>
      </BorderPane>
   </children>
</VBox>
