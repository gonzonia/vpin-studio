<BorderPane styleClass="base-component" stylesheets="@../../stylesheet.css" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.mephisto.vpin.ui.recorder.panels.ScreenRecorderPanelController">
   <center>
      <BorderPane fx:id="root">
         <BorderPane.margin>
            <Insets left="12.0" right="12.0" top="12.0" />
         </BorderPane.margin>
         <left>
            <VBox spacing="12.0" BorderPane.alignment="CENTER">
               <children>
                  <BorderPane prefWidth="300.0">
                     <left>
                        <Label fx:id="screenName" styleClass="default-title" text="-" BorderPane.alignment="CENTER" />
                     </left>
                  </BorderPane>
                  <GridPane hgap="3.0" vgap="3.0">
                    <columnConstraints>
                      <ColumnConstraints hgrow="SOMETIMES" maxWidth="143.2000732421875" minWidth="10.0" prefWidth="129.60009765625" />
                      <ColumnConstraints hgrow="SOMETIMES" maxWidth="168.0" minWidth="10.0" prefWidth="166.39990234375" />
                    </columnConstraints>
                    <rowConstraints>
                      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    </rowConstraints>
                     <children>
                        <ComboBox fx:id="recordModeComboBox" prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                        <HBox alignment="CENTER_LEFT" spacing="6.0" GridPane.columnIndex="1" GridPane.rowIndex="2">
                           <children>
                              <Spinner fx:id="durationSpinner" prefWidth="80.0" />
                              <Label styleClass="default-text" text="seconds" />
                           </children>
                        </HBox>
                        <CheckBox fx:id="enabledCheckbox" mnemonicParsing="false" text="Recording Enabled" textFill="WHITE" GridPane.columnIndex="1">
                           <font>
                              <Font size="14.0" />
                           </font>
                        </CheckBox>
                        <Label styleClass="default-text" text="Recording Options:" GridPane.rowIndex="1" />
                        <Label styleClass="default-text" text="Recording Duration:" GridPane.rowIndex="2" />
                        <Label layoutX="10.0" layoutY="49.0" styleClass="default-text" text="Screen:" />
                        <Label layoutX="10.0" layoutY="83.0" styleClass="default-text" text="Recording Delay:" GridPane.rowIndex="3" />
                        <HBox alignment="CENTER_LEFT" spacing="6.0" GridPane.columnIndex="1" GridPane.rowIndex="3">
                           <children>
                              <Spinner fx:id="delaySpinner" prefWidth="80.0" />
                              <Label styleClass="default-text" text="seconds" />
                              <Label>
                                 <font>
                                    <Font size="14.0" />
                                 </font>
                                 <graphic>
                                    <FontIcon iconColor="WHITE" iconLiteral="mdi2h-help-circle-outline" iconSize="18" />
                                 </graphic>
                                 <tooltip>
                                    <Tooltip prefWidth="300.0" text="The amount of seconds to wait after the game has been loaded." wrapText="true" />
                                 </tooltip>
                              </Label>
                           </children>
                        </HBox>
                     </children>
                  </GridPane>
                  <HBox spacing="12.0">
                     <children>
                        <VBox spacing="3.0" />
                     </children>
                  </HBox>
               </children>
               <padding>
                  <Insets bottom="12.0" left="12.0" right="12.0" top="12.0" />
               </padding>
            </VBox>
         </left>
         <center>
            <BorderPane fx:id="preview" BorderPane.alignment="CENTER">
               <center>
                  <StackPane>
                     <children>
                        <BorderPane styleClass="media-container">
                           <center>
                              <ImageView fx:id="imageView" fitHeight="120.0" fitWidth="214.0" pickOnBounds="true" preserveRatio="true" styleClass="media-container" />
                           </center>
                           <padding>
                              <Insets bottom="3.0" left="3.0" right="3.0" top="3.0" />
                           </padding>
                           <top>
                              <Label fx:id="previewTitle" styleClass="default-text" text="Screen Preview" BorderPane.alignment="CENTER" />
                           </top>
                        </BorderPane>
                        <Label fx:id="previewLabel" text="Label" />
                     </children>
                  </StackPane>
               </center>
               <BorderPane.margin>
                  <Insets bottom="6.0" left="6.0" right="6.0" top="6.0" />
               </BorderPane.margin>
            </BorderPane>
         </center>
         <styleClass>
            <String fx:value="selection-panel-selected" />
            <String fx:value="selection-panel" />
         </styleClass>
      </BorderPane>
   </center>
</BorderPane>
