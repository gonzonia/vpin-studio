<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<BorderPane fx:id="root" styleClass="base-component" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.mephisto.vpin.ui.tables.TablesController">

    <center>
        <BorderPane styleClass="subpanel" BorderPane.alignment="CENTER">
            <center>
                <StackPane fx:id="editorRootStack" BorderPane.alignment="CENTER">
                    <BorderPane.margin>
                        <Insets bottom="12.0" left="12.0" right="12.0" top="12.0" />
                    </BorderPane.margin>
                    <children>
                        <TabPane fx:id="tabPane" tabClosingPolicy="UNAVAILABLE">
                            <tabs>
                                <Tab fx:id="tablesTab" closable="false" text="All Tables">
                                    <content>
                                        <BorderPane prefHeight="200.0" prefWidth="200.0" />
                                    </content>
                                    <graphic>
                                        <FontIcon iconColor="WHITE" iconLiteral="mdi2f-format-list-bulleted-square" iconSize="18" />
                                    </graphic>
                                </Tab>
                        <Tab fx:id="vpsTablesTab" closable="false" text="VPS Tables">
                           <content>
                              <BorderPane prefHeight="200.0" prefWidth="200.0" />
                           </content>
                           <graphic>
                              <FontIcon iconColor="WHITE" iconLiteral="mdi2f-format-list-checkbox" iconSize="18" />
                           </graphic>
                        </Tab>
                                <Tab fx:id="tablesStatisticsTab" closable="false" text=" Table Statistics">
                                    <content>
                                        <BorderPane />
                                    </content>
                                    <graphic>
                                        <FontIcon iconColor="WHITE" iconLiteral="bi-graph-up" iconSize="18" text="" />
                                    </graphic>
                                </Tab>
                                <Tab fx:id="tableRepositoryTab" text=" Table Repository">
                                    <content>
                                        <BorderPane prefHeight="200.0" prefWidth="200.0" />
                                    </content>
                                    <graphic>
                                        <FontIcon iconColor="WHITE" iconLiteral="mdi2a-archive-outline" iconSize="18" />
                                    </graphic>
                                </Tab>
                            </tabs>
                        </TabPane>
                    </children>
                </StackPane>
            </center>
            <BorderPane.margin>
                <Insets right="12.0" />
            </BorderPane.margin>
        </BorderPane>
    </center>
    <right>
        <VBox maxHeight="1.7976931348623157E308" styleClass="subpanel" BorderPane.alignment="CENTER">
            <children>
                <fx:include fx:id="assetViewSideBar" maxHeight="1.7976931348623157E308" source="scene-tables-assetview-sidebar.fxml" />
                <fx:include fx:id="tablesSideBar" maxHeight="1.7976931348623157E308" source="scene-tables-sidebar.fxml" />
                <fx:include fx:id="repositorySideBar" maxHeight="1.7976931348623157E308" source="../archiving/scene-repository-sidebar.fxml" />
                <fx:include fx:id="vpsTablesSidebar" source="../vps/scene-vps-tables-sidebar.fxml" />
            </children>
            <padding>
                <Insets bottom="7.0" right="12.0" />
            </padding>
        </VBox>
    </right>
    <stylesheets>
        <URL value="@../stylesheet.css" />
        <URL value="@../richtext.css" />
    </stylesheets>
</BorderPane>
