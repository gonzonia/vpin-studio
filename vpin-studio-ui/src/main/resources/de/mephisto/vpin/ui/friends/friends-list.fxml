<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressIndicator?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<BorderPane styleClass="base-component" stylesheets="@../stylesheet.css" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.mephisto.vpin.ui.friends.FriendsListController">
   <center>
      <ScrollPane hbarPolicy="NEVER" BorderPane.alignment="CENTER">
         <content>
            <VBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefWidth="900.0" styleClass="subpanel">
               <children>
                  <HBox>
                     <children>
                        <Label styleClass="preference-title" text="FRIENDS" textFill="WHITE" />
                     </children>
                  </HBox>
                  <HBox>
                     <VBox.margin>
                        <Insets bottom="12.0" />
                     </VBox.margin>
                  </HBox>
                  <ToolBar prefHeight="40.0" styleClass="floating-toolbar">
                     <items>
                        <StackPane alignment="CENTER_RIGHT">
                           <children>
                              <TextField fx:id="textfieldSearch" onKeyPressed="#onSearchKeyPressed" prefHeight="30.0" prefWidth="200.0" promptText="Search Friend...">
                                 <font>
                                    <Font size="14.0" />
                                 </font>
                              </TextField>
                              <Button fx:id="clearBtn" mnemonicParsing="false" onAction="#onClear" styleClass="ghost-icon-button" textFill="WHITE">
                                 <font>
                                    <Font size="14.0" />
                                 </font>
                                 <graphic>
                                    <FontIcon iconColor="#222222" iconLiteral="mdi2c-close-thick" iconSize="18" />
                                 </graphic>
                              </Button>
                           </children>
                        </StackPane>
                     </items>
                  </ToolBar>
                  <VBox fx:id="emptyBox" alignment="CENTER">
                     <children>
                        <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="300.0" prefWidth="500.0">
                           <graphic>
                              <FontIcon iconColor="#605e5e" iconLiteral="mdi2a-account-plus" iconSize="300" textOrigin="CENTER" />
                           </graphic>
                        </Label>
                        <Label text="No friends found." textFill="#605e5e">
                           <font>
                              <Font name="System Bold" size="18.0" />
                           </font>
                        </Label>
                        <Label text="Add a friend by sending an invite." textFill="#605e5e">
                           <font>
                              <Font size="14.0" />
                           </font>
                        </Label>
                     </children>
                  </VBox>
                  <VBox fx:id="dataBox" alignment="CENTER" layoutX="34.0" layoutY="118.0" />
                  <VBox fx:id="loadingBox" alignment="CENTER" layoutX="34.0" layoutY="118.0">
                     <children>
                        <ProgressIndicator minHeight="183.0" minWidth="120.0">
                           <VBox.margin>
                              <Insets bottom="12.0" left="12.0" right="12.0" top="12.0" />
                           </VBox.margin>
                        </ProgressIndicator>
                        <Label text="Loading Friends Data ..." textFill="#605e5e">
                           <font>
                              <Font name="System Bold" size="18.0" />
                           </font>
                        </Label>
                     </children>
                  </VBox>
               </children>
               <padding>
                  <Insets bottom="24.0" left="24.0" right="24.0" top="24.0" />
               </padding>
            </VBox>
         </content>
      </ScrollPane>
   </center>
</BorderPane>
