<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane styleClass="base-component" stylesheets="@../../stylesheet.css" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.mephisto.vpin.ui.monitor.panels.ScreenMonitorPanelController">
   <center>
      <VBox fx:id="root" BorderPane.alignment="CENTER">
         <children>
            <StackPane>
               <children>
                  <BorderPane styleClass="media-container">
                     <center>
                        <ImageView fx:id="imageView" pickOnBounds="true" preserveRatio="true" styleClass="media-container">
                           <BorderPane.margin>
                              <Insets bottom="12.0" left="12.0" right="12.0" top="12.0" />
                           </BorderPane.margin>
                        </ImageView>
                     </center>
                     <padding>
                        <Insets bottom="3.0" left="3.0" right="3.0" top="3.0" />
                     </padding>
                     <top>
                        <Label fx:id="screenName" styleClass="default-headline" text="Screen Preview" BorderPane.alignment="CENTER_LEFT">
                           <BorderPane.margin>
                              <Insets left="12.0" top="6.0" />
                           </BorderPane.margin>
                        </Label>
                     </top>
                  </BorderPane>
               </children>
            </StackPane>
         </children>
         <BorderPane.margin>
            <Insets bottom="12.0" left="12.0" right="12.0" top="12.0" />
         </BorderPane.margin>
      </VBox>
   </center>
</BorderPane>
