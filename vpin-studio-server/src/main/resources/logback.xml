<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <appender name="rollingFile" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>./vpin-studio-server.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <FileNamePattern>./vpin-studio-server.%d{yyyy-MM-dd}.log</FileNamePattern>
            <MaxHistory>2</MaxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>%d{dd-MM HH:mm:ss.SSS} [%thread] %-5level %logger{5} - %msg%n</pattern>
        </encoder>
    </appender>
    <appender name="rollingFileVps" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>./vpin-studio-server-vps-updates.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>./vpin-studio-server-vps-updates.%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <maxFileSize>10MB</maxFileSize>
            <maxHistory>5</maxHistory>
            <totalSizeCap>1GB</totalSizeCap>
        </rollingPolicy>
        <encoder>
            <pattern>%d{dd-MM HH:mm:ss.SSS} [%thread] %-5level %logger{5} - %msg%n</pattern>
        </encoder>
    </appender>
    <appender name="out" class="ch.qos.logback.core.ConsoleAppender">
        <!-- encoders are assigned the type
             ch.qos.logback.classic.encoder.PatternLayoutEncoder by default -->
        <encoder>
            <pattern>%d{dd-MM HH:mm:ss.SSS} [%thread] %-5level %logger{5} - %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="javafx" level="error" />
    <logger name="net.dv8tion.jda.api" level="error" />
    <logger name="com.zaxxer" level="error" />

    <logger name="de.mephisto.vpin.server.vps.VpsService">
        <appender-ref ref="rollingFileVps" />
    </logger>
    <logger name="de.mephisto.vpin.server.vps.VpsUpdateThread">
        <appender-ref ref="rollingFileVps" />
    </logger>
    <logger name="de.mephisto.vpin.connectors.vps.VPS">
        <appender-ref ref="rollingFileVps" />
    </logger>

    <root level="INFO">
        <appender-ref ref="rollingFile"/>
        <appender-ref ref="out"/>
    </root>
</configuration>